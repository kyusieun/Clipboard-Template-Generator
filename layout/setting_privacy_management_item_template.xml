<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="40dp">


    <ImageView
        android:id="@+id/list_box"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/list_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
 />

    <TextView
        android:id="@+id/list_box_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홍길동"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_box"
        app:layout_constraintStart_toStartOf="@id/list_box"
        app:layout_constraintTop_toTopOf="@id/list_box"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/list_box_close_btn"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/close_icon"
        app:layout_constraintBottom_toBottomOf="@id/list_box"
        app:layout_constraintEnd_toEndOf="@id/list_box"
        app:layout_constraintTop_toTopOf="@+id/list_box"
        android:layout_marginRight="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>