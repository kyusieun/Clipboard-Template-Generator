<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2A579"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/btn_template_editor_exit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="template editor"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>


    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/texteditor_topbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:background="@color/c4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_bookmark_keyword"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/bookmark_keyword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                />

            <ImageView
                android:id="@+id/btn_list_keyword"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/list_keyword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                />

            <ImageView
                android:id="@+id/btn_text_keyword"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/text_keyword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/set_account_view"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toBottomOf="@+id/texteditor_topbar_view"
        android:layout_marginTop="16dp"
        android:background="@drawable/view_round_color4">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="null"
        android:text="samptext"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        />



    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>